{
  "env": {
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsdoc/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "jsdoc/require-param-type": 0,
    "jsdoc/require-returns-type": 0
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  }
}
