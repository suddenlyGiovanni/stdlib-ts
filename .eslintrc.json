{
  "env": {
    "es2021": true,
    "jest/globals": false
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsdoc/recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:jest-formatting/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-tsdoc",
    "jest",
    "jest-formatting"
  ],
  "rules": {
    "jsdoc/require-param-type": 0,
    "jsdoc/require-returns-type": 0,
    "tsdoc/syntax": 1
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    },
    "jest": {
      "version": 27
    }
  }
}
